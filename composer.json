{
    "name": "levu42/regexpander",
    "description": "PHP library that expands a regular expression into a random string that matches this pattern",
    "keywords": [
        "regular expression",
        "regex",
        "pattern",
        "regexpander"
    ],
    "homepage": "https://github.com/levu42/regexpander",
    "license": "MIT",
    "authors": [
        {
            "name": "Florian Stascheck",
            "email": "florian.stascheck@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Levu42\\RegExpander\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Levu42\\RegExpander\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
